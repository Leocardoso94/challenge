{
  "name": "challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/Leocardoso94/challenge",
  "author": "Leonardo Cardoso <leocardosoTI@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "lint": "eslint {src,tests}/**/*.js",
    "dev:client": "webpack --mode development --watch",
    "dev:server": "nodemon src/server/server.js",
    "start": "npm run build && node src/server/server.js",
    "build": "webpack --mode production",
    "tdd": "jest --watch --coverage --verbose"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "css-loader": "^0.28.11",
    "eslint": "4.9.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.7.0",
    "husky": "^1.0.0-rc.7",
    "jest": "^23.0.0",
    "jsdom": "^11.11.0",
    "nodemon": "^1.17.5",
    "style-loader": "^0.21.0",
    "supertest": "^3.1.0",
    "webpack": "^4.9.1",
    "webpack-cli": "^2.1.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test && npm run lint",
      "pre-commit": "npm run lint --fix"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ]
  }
}
